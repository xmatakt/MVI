<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FEINews.ArticlePage"
             Title="Články">

    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="CategoryPicker" Title="Kategórie"
                    SelectedIndexChanged="CategoryPicker_SelectedIndexChanged"/>
            <ListView x:Name="ArticlesListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Detail="{Binding Title}" TextColor="Gray" Text="{Binding Category}" DetailColor="Blue" Tapped="TextCell_Tapped"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Image Source="feiLogo.jpg" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>