<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="MechatronikaCool.MainWindow"
        Title="MainWindow" Height="350" Width="635" Background="#FF005CAE" MaxWidth="635" MaxHeight="350" MinWidth="635" MinHeight="350">
    <Grid x:Name="grid" Margin="1,0,2.4,3.2" Background="#FF005CAE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="626" Background="Black" Margin="0,0,-0.4,0">
            <Menu x:Name="menu" HorizontalAlignment="Center" Height="34" Margin="25,0" VerticalAlignment="Top" Background="Black"/>
            <Button x:Name="moveRight" Content="&gt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="23" RenderTransformOrigin="10.096,0.376" Height="34" Background="#FF141414" Foreground="White" Click="moveRight_Click" Margin="593,0,0,0" BorderBrush="{x:Null}"/>
        </Grid>
        <Button x:Name="moveLeft" Content="&lt;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="23" RenderTransformOrigin="0.473,0.15" Height="34" Background="#FF141414" Foreground="White" Click="moveLeft_Click" BorderBrush="{x:Null}"/>
        <Grid HorizontalAlignment="Left" Margin="11,48,0,0" VerticalAlignment="Top" Background="#FF005CAE" Width="605">
            <TextBlock x:Name="spanTitle" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="0" Padding="0" UseLayoutRounding="False"/>
            <TextBlock x:Name="spans" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="20,20,20,0" Foreground="White"/>
            <Button x:Name="spanLeftButton" Content="&lt;" Width="15" Background="Black" BorderBrush="{x:Null}" Foreground="White" Click="spanLeftButton_Click" HorizontalAlignment="Left"/>
            <Button x:Name="spanRightButton" Content="&gt;" Margin="590,0,0,0.8" Background="Black" BorderBrush="{x:Null}" Foreground="White" Click="spanRightButton_Click"/>
        </Grid>
    </Grid>
</Window>
